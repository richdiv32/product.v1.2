<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ng.campusbuddy">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".education.EducationActivity"></activity>
        <activity android:name=".profile.ProfileActivity" />
        <activity android:name=".home.HomeActivity" />
        <activity android:name=".auth.ForgotPasswordActivity" />
        <activity android:name=".auth.SignUpActivity" />
        <activity android:name=".start.WelcomeActivity" />
        <activity android:name=".auth.LoginActivity" />
        <activity
            android:name=".social.SocialActivity"
            android:label="@string/title_activity_social"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".start.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>