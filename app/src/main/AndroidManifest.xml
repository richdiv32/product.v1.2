<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ng.campusbuddy">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".profile.FollowersActivity"></activity>
        <activity android:name=".post.CommentsActivity" />
        <activity android:name=".social.message.ChatActivity" />
        <activity android:name=".others.OtherActivity" />
        <activity android:name=".post.PostActivity" />
        <activity android:name=".start.IntroActivity" />
        <activity
            android:name=".education.EducationActivity"
            android:theme="@style/DrawerStyle" />
        <activity android:name=".profile.ProfileActivity" />
        <activity
            android:name=".home.HomeActivity"
            android:theme="@style/DrawerStyle" /> <!-- Authentication -->
        <activity
            android:name=".auth.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TransStatusBar" />
        <activity
            android:name=".auth.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TransStatusBar" />
        <activity
            android:name=".auth.SignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TransStatusBar" />
        <activity
            android:name=".start.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TransStatusBar" />
        <activity
            android:name=".social.SocialActivity"
            android:theme="@style/DrawerStyle" />
        <activity
            android:name=".start.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Image Cropper -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>