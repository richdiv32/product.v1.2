<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--Light/Day Theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#ff0000</item>
        <item name="colorAccent">#FC3737</item>
        <item name="appbarcolor">#ff0000</item>
        <item name="backgroundcolor">#E9E9E9</item>
        <item name="cardbackground">#ffffff</item>
        <item name="title_textcolor">#000000</item>
        <item name="textcolor">#808080</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#FF0000</item>
        <item name="darkcolor">#C50000</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <!--        <item name="android:statusBarColor" tools:targetApi="21">@android:color/transparent</item>-->
    </style>

    <!--Dark/Night Theme-->
    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorAccent">#FC3737</item>
        <item name="appbarcolor">#212121</item>
        <item name="backgroundcolor">#303030</item>
        <item name="cardbackground">#424242</item>
        <item name="title_textcolor">#FFFFFF</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#FF0000</item>
        <item name="darkcolor">#000000</item>


        <!--        <item name="android:statusBarColor" tools:targetApi="21">@android:color/transparent</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DrawerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="21">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="TransStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="21">true</item>
        <item name="android:statusBarColor" tools:targetApi="21">@android:color/transparent</item>
    </style>

    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="background">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
