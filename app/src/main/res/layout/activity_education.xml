<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".education.EducationActivity"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container">
            <!--            android:layout_above="@+id/spaceTabLayout"-->


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <eu.long1.spacetablayout.SpaceTabLayout
                android:backgroundTintMode="screen"
                app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
                android:id="@+id/spaceTabLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:number_of_tabs="five"
                app:starting_position="three"
                app:tab_color="@color/grey"
                app:button_color="@color/colorPrimary"
                />
        </FrameLayout>
    </RelativeLayout>



    <include layout="@layout/nav_veiw"/>

</androidx.drawerlayout.widget.DrawerLayout>