<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".education.EducationActivity"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/app_bar"
            android:id="@+id/toolbar_edu"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container">
            <!--            android:layout_above="@+id/spaceTabLayout"-->


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <com.luseen.spacenavigation.SpaceNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/space"
                android:layout_gravity="bottom"
                app:active_centre_button_icon_color="@color/colorPrimary"
                app:inactive_centre_button_icon_color="@color/colorPrimary"
                app:active_item_color="@color/white"
                app:space_background_color="@color/grey"
                app:inactive_item_color="@color/black"
                app:centre_button_icon="@drawable/ic_browse"
                app:centre_button_color="@color/black"
                app:active_centre_button_background_color="@color/grey"/>
        </FrameLayout>
    </RelativeLayout>



    <include layout="@layout/nav_veiw"/>

</androidx.drawerlayout.widget.DrawerLayout>