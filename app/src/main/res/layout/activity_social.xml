<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".social.SocialActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/spaceTabLayout">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>
    </RelativeLayout>

    <eu.long1.spacetablayout.SpaceTabLayout
        android:backgroundTintMode="screen"
        app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
        android:id="@+id/spaceTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:number_of_tabs="five"
        app:starting_position="one"
        app:tab_color="@color/grey"
        app:button_color="@color/colorPrimary"
        app:icon_one="@drawable/ic_group_chat"
        app:icon_two="@drawable/ic_chat"
        app:icon_three="@drawable/ic_match_meet"
        app:icon_four="@drawable/ic_chat_room"
        app:icon_five="@drawable/ic_search"
        />



    <include layout="@layout/nav_veiw"/>

</androidx.drawerlayout.widget.DrawerLayout>